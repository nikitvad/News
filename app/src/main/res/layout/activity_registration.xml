<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nikit.news.ui.activity.RegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/et_registration_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_et_height"
            android:hint="@string/registration_et_name_hint" />

        <EditText
            android:id="@+id/_et_registration_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_et_height"
            android:hint="@string/registration_et_email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_registration_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_et_height"
            android:hint="@string/registration_et_password_hint"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_registration_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_et_height"
            android:hint="@string/registration_et_repeat_password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_registration_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_bt_height"
            android:background="@drawable/rounded_button"
            android:text="@string/registration_bt_submit_title"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_already_have_an_account"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/registration_tv_already_have_an_account"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>


